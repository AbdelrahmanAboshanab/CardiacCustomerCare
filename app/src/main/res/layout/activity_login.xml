<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/colorAccent"
    android:padding="20dp">



    <ImageView
        style="@style/Text"
        android:id="@+id/appLogo"
        android:src="@mipmap/logo_white"
        android:layout_height="90dp"
        android:layout_width="110dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        />

    <TextView
        style="@style/Text"
        android:id="@+id/loginToContinue"
        android:text="Login to continue"
        android:layout_below="@id/appLogo"
        android:layout_marginTop="5dp"
        />

    <EditText
        style="@style/EditText"
        android:id="@+id/Email"
        android:hint=" Email"
        android:layout_below="@id/loginToContinue"
        android:inputType="text"

        />

    <EditText
        style="@style/EditText"
        android:id="@+id/Password"
        android:hint=" password"
        android:layout_below="@id/Email"
        android:inputType="textPassword" />
    <Button
        style="@style/Button"
        android:id="@+id/Login"
        android:text="login"
        android:textColor="#fafafa"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Password"
        android:layout_marginBottom="1dp"
        />


    <TextView
        style="@style/Text"
        android:id="@+id/forgetPassword"
        android:text="Forget password ?"
        android:textColor="#29b6f6"
        android:layout_below="@id/Login"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        />

    <TextView
        style="@style/Text"
        android:id="@+id/noAccountYet"
        android:text="No  account  yet  ?"
        android:layout_below="@+id/forgetPassword"
        android:paddingLeft="60dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        style="@style/Text"
        android:id="@+id/createOne"
        android:text="Create one"
        android:textColor="#29b6f6"
        android:layout_below="@id/forgetPassword"
        android:layout_toRightOf="@+id/noAccountYet"
        android:layout_marginTop="10dp"
        />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/createOne"
        android:textAlignment="center"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>


</RelativeLayout>