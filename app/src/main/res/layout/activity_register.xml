<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/colorAccent"
    android:padding="20dp">

    <ImageView
        style="@style/Text"
        android:id="@+id/appLogo"
        android:src="@mipmap/logo_white"
        android:layout_height="90dp"
        android:layout_width="110dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        />

    <TextView
        style="@style/Text"
        android:id="@+id/loginToContinue"
        android:text="Register to continue"
        android:layout_below="@id/appLogo"
        />

    <EditText
        style="@style/EditText"
        android:id="@+id/emailRegister"
        android:hint="  Email"
        android:layout_below="@id/loginToContinue"
        android:inputType="text"
        />


    <EditText
        android:id="@+id/passwordRegister"
        style="@style/EditText"
        android:layout_below="@id/emailRegister"
        android:layout_marginTop="8dp"
        android:hint="  Password"
        android:inputType="text" />

    <Button
        style="@style/Button"
        android:id="@+id/Register"
        android:text="Register"
        android:textColor="#fafafa"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passwordRegister"
        />




    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Register"
        android:textAlignment="center"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>